<phpunit bootstrap="tests/bootstrap.php">
    <testsuites>
        <testsuite name="PageCache">
            <directory>tests</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">src</directory>
            <exclude>
                <file>src/config-stub.php</file>
            </exclude>
        </whitelist>
    </filter>
</phpunit>